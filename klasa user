        // Logjika për regjistrimin e përdoruesit
    }

    public void ndryshoTëDhënatPersonale(String emri, String mbiemri, String adresa, String numriTelefonit) {
        this.emri = emri;
        this.mbiemri = mbiemri;
        this.adresa = adresa;
        this.numriTelefonit = numriTelefonit;
    }

    public double kontrolloBilancin() {
        // Logjika për kontrollin e bilancit
        return 0.0;
    }

    public void transferoFonde(double shuma, String llogariaTransferuese, String llogariaPranuese) {
